{% extends 'header.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>
	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>Profile</h1>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="#">Home</a>
							</li>
							<li class="breadcrumb-item active">User Profile</li>
						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>

		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				<div class="row">
					<div
						class="col-md-3">

						<!-- Profile Image -->
						<div class="card card-primary card-outline">
							<div class="card-body box-profile">


								<h3 class="profile-username text-center">{{ user.email }}</h3>

								<p class="text-muted text-center">{{ user.id }}</p>

								<ul class="list-group list-group-unbordered mb-3">
									<li class="list-group-item">
										<b>Email:
										</b>
										<td>{{ user.email }}</td>
									</li>
									<li class="list-group-item">
										<b>Roles:
										</b>
										<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
									</li>
									<li class="list-group-item">
										<b>Username:
										</b>
										<td>{{ user.username }}</td>
									</li>
								</ul>

								<a href="{{ path('user') }}" class="btn btn-primary btn-block">
									<b>Back to list</b>
								</a>
								<a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary btn-block">
									<b>Edit</b>
								</a>

								<a class="btn btn-primary btn-block">
									{{ include('user/_delete_form.html.twig') }}
								</a>


							</div>
							<!-- /.card-body -->
						</div>
						<!-- /.card -->

						<table class="table">
							<tbody>
								<tr>
									<th>Id</th>
									<td>{{ user.id }}</td>
								</tr>
								<tr>
									<th>Email</th>
									<td>{{ user.email }}</td>
								</tr>
								<tr>
									<th>Roles</th>
									<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
								</tr>
								<tr>
									<th>Password</th>
									<td>{{ user.password }}</td>
								</tr>
								<tr>
									<th>Username</th>
									<td>{{ user.username }}</td>
								</tr>
							</tbody>
						</table>

						<a href="{{ path('user') }}">back to list</a>

						<a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

						{{ include('user/_delete_form.html.twig') }}
					{% endblock %}
