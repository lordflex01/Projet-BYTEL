{% block body %}
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1 class="m-0" style="font-size:19px">Liste des Tâches</h1>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>
		<section
			class="content">

			<!-- Default box -->
			<div
				class="card">

				<!-- /.card-header -->
				<div class="card-body">
					{% if is_granted('ROLE_ADMIN') %}
						<a class="btn btn-primary" style="float:right;" href="{{ path('taches_new') }}">Ajouter une nouvelle tâche</a>

					{% endif %}
					<table id="example1" class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>
									#
								</th>
								<th style="width: 30%">
									Jira
								</th>
								<th>
									Description
								</th>
								<th>
									Code Projet
								</th>
								<th>
									Domaine
								</th>
								{% if is_granted('ROLE_ADMIN') %}
									<th>
										Actions
									</th>
								{% endif %}
							</tr>
						</thead>
						<tbody>
							{% for tach in taches %}
								{% if app.user.projet.libelle == tach.domaine %}
									<tr>
										<td>
											#
										</td>
										<td>
											{{ tach.libelle }}
										</td>
										<td>
											{{ tach.description }}
										</td>
										<td>
											{{ tach.codeprojet }}
										</td>
										<td>
											{{ tach.domaine }}
										</td>

										<td>
											{% if is_granted('ROLE_ADMIN') %}
												<a class="btn btn-info btn-sm" href="{{ path('taches_edit', {'id': tach.id}) }}">
													<i class="fas fa-pencil-alt"></i>
												</a>
												<a class="btn">
													{{ include('taches/_delete_form.html.twig') }}
												</a>
											{% endif %}
										</td>

									</tr>
								{% endif %}
							{% endfor %}

						</tbody>
					</table>
				</div>
				<!-- /.card-body -->
			</div>
		</div><!-- /.card-body --></div><!-- /.card --></section>

<!-- /.content --></div>{% endblock %}
