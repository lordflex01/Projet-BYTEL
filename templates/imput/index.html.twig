{% extends 'header.html.twig' %}
{% block body %}


	<!-- Content Wrapper. Contains page content -->
	<div class="content-wrapper">
		<!-- Content Header (Page header) -->
		<div class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1 class="m-0">Imputation</h1>
					</div>
				</div>
				<!-- /.row -->
			</div>
			<!-- /.container-fluid -->
		</div>
		<!-- /.content-header -->

		<!-- Main content -->
		<div class="col-lg-12">
			<div class="card card-primary card-outline cardT">
				<div class="card-header">
					<div class="rowT">
						<div class="col-sm-4">
							<div class="form-group">
								{% if app.user.roles == ["ROLE_USER"] %}
									<select class="form-control select2" id="name" style="width: 100%;" disabled>
										<option value=""></option>
										<option value='{{ app.user.id }}'>{{ app.user.username }}</option>
									</select>
								{% else %}
									<select class="form-control select2" id="name" style="width: 100%;">
										<option value=""></option>
										{% for user in users %}
											<option value='{{ user.id }}'>{{ user.username }}</option>
										{% endfor %}
									</select>
								{% endif %}
							</div>
						</div>
						<div class="col-sm-3">
							<div class="input-group">
								<input type="week" value={{thisweek}} id="date-input" class="form-control" name="month"/>
							</div>
						</div>
						<div class="col-sm-2">
							<button type="button" id="btnRech" class="btn btn-block btn-info">Rechercher</button>
						</div>

						<div class="col-1">
							<button type="button" class="btn btn-outline-secondary btn-block" id="save">
								<i class="fa fa-save"></i>
							</button>
						</div>
						{% if is_granted('ROLE_ADMIN') %}
						<div class="btn-group">
							<button type="button" class="btn btn-outline-secondary">Exporter</button>
							<button type="button" class="btn btn-outline-secondary btn-block dropdown-toggle dropdown-icon" data-toggle="dropdown">
								<span class="sr-only">Toggle Dropdown</span>
							</button>
							<div class="dropdown-menu" role="menu">
								<a class="dropdown-item" type="button" id="export">CSV/sem</a>
								<a class="dropdown-item" type="button" id="exportMois">CSV/mois</a>
								<a class="dropdown-item" type="button" id="exportIntervalle" data-toggle="modal" data-target="dataRangeModal">CSV/intervalle</a>
							</div>
						</div>
						{% endif %}
					</div>
				</div>
				<div class="card">
					<div class="card-body p-0 table-responsive">
						<table class="table" id="firm_table">
							<thead id="entete"></thead>
							<tbody id="tableB"></tbody>
							<tfoot id="footTable"></tfoot>
						</table>
					</div>
					<div></div>
					<div class="modal fade" id="dataRangeModal" tabindex="-1" role="dialog" aria-labelledby="dataRangeModalLabel" aria-hidden="true">
						<div class="modal-dialog" role="document">
							<div class="modal-content">
								<div class="modal-header">
									<h5 class="modal-title" id="dataRangeModalLabel">Sélectionnez la plage de dates</h5>
									<button type="button" class="close" data-dismiss="modal" aria-label="Close">
										<span aria-hidden="true">&times;</span>
									</button>
								</div>
								<div class="modal-body">
									<div class="form-group">
										<label for="date_debut_modal">Date de début :</label>
										<input type="date" class="form-control" id="date_debut_modal">
									</div>
									<div class="form-group">
										<label for="date_fin_modal">Date de fin :</label>
										<input type="date" class="form-control" id="date_fin_modal">
									</div>
								</div>
								<div class="modal-footer">
									<button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
									<button type="button" class="btn btn-primary" id="exportDataRangeModal">Exporter</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- /.content -->
		</div><!-- /.content-wrapper -->
		<!-- Main Footer -->
	</div>
{% endblock %}
