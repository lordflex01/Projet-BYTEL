<!DOCTYPE html>
<html lang="en">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Bouygues Telecom</title>

		{% block stylesheets %}
			<!-- fav icon for website -->
			<link rel="icon" type="image/png" href="{{asset ("assets/img/Bouygues_Télécom.gif")}}">
			<!-- css header -->
			<link rel="stylesheet" href="{{asset ("assets/plugins/fontawesome-free/css/all.css")}}">
			<!-- overlayScrollbars -->
			<link rel="stylesheet" href="{{asset ("assets/plugins/overlayScrollbars/css/OverlayScrollbars.min.css")}}">
			<!-- Select2 -->
			<link rel="stylesheet" href="{{asset ("assets/plugins/select2/css/select2.min.css")}}">
			<!-- css starter page -->
			<link rel="stylesheet" href="{{asset ("assets/css/styles.css")}}">
			<!-- css imputation calendar -->
			<link rel='stylesheet' href="{{asset ("assets/js/impCal/lib/main.css")}}">
			<!-- Ionicons -->
			<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

			<!-- datatable -->
			<link rel="stylesheet" href="{{asset ("/assets/css/datatable/buttons.bootstrap4.min.css")}}">
			<link rel="stylesheet" href="{{asset ("/assets/css/datatable/dataTables.bootstrap4.min.css")}}">
			<link rel="stylesheet" href="{{asset ("/assets/css/datatable/responsive.bootstrap4.min.css")}}">

			<!-- SweetAlert2 -->
			<link rel="stylesheet" href="{{asset ("assets/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")}}">
<!-- ChartJS  -->
			<script src="{{asset ("assets/plugins/chart.js/Chart.bundle.min.js")}}"></script>
			<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
		{% endblock %}
	</head>
	<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed">
		<div class="wrapper">

			<!-- Navbar -->
			<nav class="main-header navbar navbar-expand navbar-white navbar-light">
				<!-- Left navbar links -->
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link" data-widget="pushmenu" href="#" role="button">
							<i class="fas fa-bars"></i>
						</a>
					</li>
					
				</ul>

				<!-- Right navbar links -->
				<ul class="navbar-nav ml-auto">
					<!-- Navbar Search -->
					<!-- Notifications Dropdown Menu -->
						<li class="nav-item dropdown"> <a class="nav-link" data-toggle="dropdown" href="#">
							<i class="far fa-bell"></i>
							<span class="badge badge-warning navbar-badge"></span>
						</a>
						<div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
							<div class="dropdown-divider"></div>
							<a href="#" class="dropdown-item dropdown-footer">Voir toutes les notifications</a>
						</div>
					</li>
					<li class="nav-item">
						<a class="nav-link" data-widget="fullscreen" href="#" role="button">
							<i class="fas fa-expand-arrows-alt"></i>
						</a>
					</li>
					<div class="user-panel-icon-navbar">

						{% if app.user.image == null %}
							<a class="nav-link">
								<img src="{{asset ('/uploads/avatar.png')}}" class="img-circle elevation-2" alt="Image" width="30">
							</a>
						{% else %}
						<a class="nav-link">
							<img src="{{asset ('/uploads/' ~ app.user.image.name)}}" class="img-circle-navbar" alt="Image" width="30">
						</a>
{% endif %}
					</div>
					<li class="nav-item dropdown">
						<a id="dropdownSubMenu1" href="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">{{ app.user.username }}</a>

						<ul aria-labelledby="dropdownSubMenu1" class="dropdown-menu">
							<li class="nav-item">
								<a class="nav-link" href="/profil">
									<i class="fa fa-user" aria-hidden="true"></i>
									&nbsp;Profil
								</a>

							</li>
							<li class="dropdown-divider"></li>

							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_logout') }}">
									<i class="fa fa-power-off" aria-hidden="true"></i>
									&nbsp;Déconnexion
								</a>

							</li>
							<!-- End Level two -->
						</ul>
					</li>
				</ul>
			</nav>
			<!-- /.navbar -->

			<!-- Main Sidebar Container -->
			<aside
				class="main-sidebar sidebar-dark-primary elevation-4">
				<!-- Brand Logo -->
				<a href="/accueil" class="brand-link">
					<img src="{{asset ("assets/img/bouygues_Télécom.gif")}}" alt="Bouygues Telecom" class="brand-image img-circle elevation-3">
					<span class="brand-text">Bouygues Telecom</span>
				</a>

				<!-- Sidebar -->
				<div
					class="sidebar">
					<!-- Sidebar user panel (optional) -->
					<div class="user-panel mt-3 pb-3 mb-3 d-flex">
						<div class="user-panel-icon">
							<a class="nav-link" href="/profil">
{% if app.user.image == null %}
									<img src="{{asset ('/uploads/avatar.png')}}" class="img-circle elevation-2" alt="Image" width="30">
								{% else %}
								<img src="{{asset ('/uploads/' ~ app.user.image.name)}}" class="img-circle elevation-2" alt="Image" width="30">
{% endif %}
							</a>

						</div>
						<div class="info">
							<a href="/profil" class="d-block">{{ app.user.username }}</a>
							<a href="/profil" class="d-block">
								{% if app.user.roles  == ["ROLE_USER"]%}
									Collaborateur
								{% else %}
									Administrateur
								{% endif %}

							</a>
						</div>
					</div>

					<!-- SidebarSearch Form -->
					<div class="form-inline">
						<div class="input-group" data-widget="sidebar-search">
							<input class="form-control form-control-sidebar" type="search" placeholder="Rechercher" aria-label="Rechercher">
							<div class="input-group-append">
								<button class="btn btn-sidebar">
									<i class="fas fa-search fa-fw"></i>
								</button>
							</div>
						</div>
					</div>

					<!-- Sidebar Menu -->
					<nav class="mt-2" id="nav">
						<ul
							class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
							<!-- Menu page de demarage avec condition  !-->
							
							<li class="nav-item">
								{% set url = app.request.uri %}
								{% if '/imput/' in url %}
									<a href="/imput" class="nav-link active">
									{% else %}
										<a href="/imput" class="nav-link">
										{% endif %}
										<i class="nav-icon fas fa-calendar-check"></i>
										<p>
											Imputation
										</p>
									</a>
								</li>
							</li>
							{% if is_granted('ROLE_ADMIN') %}
								<li class="nav-item">
									{% set url = app.request.uri %}
									{% if '/suivimputation' in url %}
										<a href="/suivimputation" class="nav-link active">
										{% else %}
											<a href="/suivimputation" class="nav-link">
											{% endif %}
											<i class="nav-icon fa fa-check"></i>
											<p>
												Suivi Imputation
											</p>
										</a>
									</li>
								</li>
								<li class="nav-item">
									{% set url = app.request.uri %}
									{% if '/suivmputationMois' in url %}
										<a href="/suivmputationMois" class="nav-link active">
										{% else %}
											<a href="/suivmputationMois" class="nav-link">
											{% endif %}
											<i class="nav-icon fas fa-check-double"></i>
											<p>
												Suivi Imputation mensuel
											</p>
										</a>
									</li>
								</li>
								<li class="nav-item">
									{% if '/statistique' in url %}
										<a href="/statistique" class="nav-link active">
										{% else %}
											<a href="/statistique" class="nav-link">
											{% endif %}
											<i class="nav-icon fas fa-chart-bar"></i>
											<p>Rapports / Statistiques</p>
										</a>
									</li>
									{% if ('/projet/' in url) or ('/code/projet/' in url) or ('/taches/' in url) or ('/activite/' in url) %}
										<li class="nav-item menu-open">
										{% else %}
											<li class="nav-item">
											{% endif %}
											{% if ('/projet/' in url) or ('/code/projet/' in url) or ('/taches/' in url) or ('/activite/' in url) %}
												<a href="/projet" class="nav-link active">
												{% else %}
													<a href="/projet" class="nav-link">
													{% endif %}
													<i class="nav-icon fas fa-tasks"></i>
													<p>
														Projets
														<i class="right fas fa-angle-left"></i>
													</p>
												</a>
												<ul class="nav nav-treeview">
													<li class="nav-item">
														{% if '/projet/' in url and '/code/projet/' not in url %}
															<a href="/projet" class="nav-link active">
															{% else %}
																<a href="/projet" class="nav-link">
																{% endif %}
																<i class="far 	fa-circle nav-icon"></i>
																<p>Détails Projets</p>
															</a>
														</li>
													</li>
													<li class="nav-item">
														{% if '/code/projet/' in url %}
															<a href="/code/projet/" class="nav-link active">
															{% else %}
																<a href="/code/projet/" class="nav-link">
																{% endif %}
																<i class="far 	fa-circle nav-icon"></i>
																<p>Code Projets</p>
															</a>
														</li>
													</li>
													<li class="nav-item">
														{% if '/taches/' in url %}
															<a href="/taches" class="nav-link active">
															{% else %}
																<a href="/taches" class="nav-link">
																{% endif %}
																<i class="far fa-circle nav-icon"></i>
																<p>Tâches</p>
															</a>
														</li>
													</li>
													<li
														class="nav-item">
										<!--if app.request.uri  == 'https://127.0.0.1:8000/activite/'-->
														{% if '/activite/' in url %}
											<a href="/activite" class="nav-link active">
										{% else %}
											<a href="/activite" class="nav-link">
										{% endif %}
												<i class="far fa-circle nav-icon"></i>
												<p>Activités</p>
											</a>
										</li>
										</li>
									</ul>
								</li>
							{% endif %}
							<!-- Menu utilisateur avec condition  !-->
							{% if is_granted('ROLE_ADMIN') %}
								<li class="nav-item">
									{% if '/user/' in url %}
										<a href="/user" class="nav-link active">
										{% else %}
											<a href="/user" class="nav-link">
											{% endif %}
											<i class="nav-icon fas fa-users"></i>
											<p>
												Collaborateurs
											</p>
										</a>
									</li>
								{% endif %}
							</li>
						</li>
					</li>
							</li>
					</ul>
				</li>
				</nav>
				<!-- /.sidebar-menu -->
			</div>
			<!-- /.sidebar -->
		</body>
	</body>
