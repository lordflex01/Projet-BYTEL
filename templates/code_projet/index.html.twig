{% extends 'header.html.twig' %}
{% block body %}
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1 class="m-0" style="font-size:19px">Liste des projets</h1>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="/index">Accueil</a>
							</li>
							<li class="breadcrumb-item">
								<a href="/projet">Projet</a>
							</li>
							<li class="breadcrumb-item active">Code Projets</li>
						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Libelle</th>
					<th>Description</th>
					<th>Statut</th>
					<th>Budget</th>
					<th>DateD</th>
					<th>DateF</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for code_projet in code_projets %}
					<tr>
						<td>{{ code_projet.id }}</td>
						<td>{{ code_projet.libelle }}</td>
						<td>{{ code_projet.description }}</td>
						<td>{{ code_projet.statut ? 'Yes' : 'No' }}</td>
						<td>{{ code_projet.budget }}</td>
						<td>{{ code_projet.dateD ? code_projet.dateD|date('Y-m-d') : '' }}</td>
						<td>{{ code_projet.DateF ? code_projet.DateF|date('Y-m-d') : '' }}</td>
						<td>
							<a href="{{ path('code_projet_show', {'id': code_projet.id}) }}">show</a>
							<a href="{{ path('code_projet_edit', {'id': code_projet.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('code_projet_new') }}">Create new</a>
	</div>
{% endblock %}
