{{ form_start(form) }}
<!-- Main content -->
<section class="content">
	<style>
		.row {
			display: flex;
		}
		.col {
			flex: 1;
		}
	</style>
	<!--{{ dump() }}-->

	<div class="container-fluid">
		<div
			class="row">
			<!-- left column -->
			<div
				class="col-md-12">
				<!-- general form elements -->
				<div class="card card-primary">


					<!-- /.card-header -->
					<!-- form start -->
						<form>
							<div class="card-body"> <div class="form-group">
								<label for="{{form.libelle.vars.id}}">Code du projet</label>
								{{form_widget( form.libelle)}}
								{{form_errors(form.libelle)}}
								{% do form.libelle.setRendered %}
							</div>
							<div class="form-group">
								<label for="{{form.description.vars.id}}">Description</label>
								{{form_widget( form.description)}}
								{% do form.description.setRendered %}
							</div>
							<div class="form-group">
								<label for="{{form.budget.vars.id}}">Budget</label>
								{{form_widget( form.budget)}}
								{% do form.budget.setRendered %}
							</div>
							<div class="row">
								<div class="col">
									<label for="{{form.budgetNRJ.vars.id}}">Budget NRJ</label>
									{{form_widget( form.budgetNRJ)}}
									{% do form.budgetNRJ.setRendered %}</div>
								<div class="col">
									<label for="{{form.budgetDECO.vars.id}}">Budget DECO</label>
									{{form_widget( form.budgetDECO)}}
									{% do form.budgetDECO.setRendered %}</div>
							</div>
							<div class="form-group">
								<label for="{{form.chageJH.vars.id}}">Charges</label>
								{{form_widget( form.chageJH)}}
								{% do form.chageJH.setRendered %}
							</div>
							<div class="row">
								<div class="col">
									<label for="{{form.chageNRJ.vars.id}}">Charges NRJ</label>
									{{form_widget( form.chageNRJ)}}
									{% do form.chageNRJ.setRendered %}</div>
								<div class="col">
									<label for="{{form.chageDECO.vars.id}}">Charges DECO</label>
									{{form_widget( form.chageDECO)}}
									{% do form.chageDECO.setRendered %}</div>
							</div>
							<div class="row">
								<div class="col">
									<label for="{{form.dateD.vars.id}}">Date de debut</label>
									{{form_widget( form.dateD)}}
									{% do form.dateD.setRendered %}</div>
								<div class="col">
									<label for="{{form.DateF.vars.id}}">Date de fin</label>
									{{form_widget( form.DateF)}}
									{% do form.DateF.setRendered %}</div>
							</div>
							<div class="form-group">
								{{form_widget( form.statut)}}
								{% do form.statut.setRendered %}</div>
						</div>
						<!-- /.card-body -->

						<div class=" card-footer">

							<button type="submit" class="btn btn-success swalDefaultSuccess">{{ button_label|default('Ajouter') }}</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	{{ form_end(form) }}
