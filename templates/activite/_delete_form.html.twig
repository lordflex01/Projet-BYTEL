<form method="post" action="{{ path('activite_delete', {'id': activite.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet activitée ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activite.id) }}">
  <button class="btn btn-danger btn-sm">
		<i class="fas fa-trash"></i>
	</button>
</form>
