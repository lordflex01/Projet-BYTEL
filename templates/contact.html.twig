{% extends 'header.html.twig' %}
{% block body %}
	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<div class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1 class="m-0">
							Contactez-nous
						</h1>
					</div>
				</div>
				<!-- /.row -->
			</div>
			<!-- /.container-fluid -->
		</div>
		<!-- /.content-header -->

		<!-- Main content -->
		<div class="col-lg-12">

			<div class="card card-primary card-outline">
				<div class="card-header">
					<div class="row">
						<div
							class="col-sm-4">
							<!-- select -->
							<div class="form-group">
								<select class="form-control select2" style="width: 100%;">
									{% for user in users %}
										<option data-filter="1">{{ user.username }}</option>
									{% endfor %}
								</select>

							</div>
						</div>
						<div class="col-sm-3">

							<div class="input-group">
								<input type="month" value="2018-05" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
							</div>
						</div>
						<div class="col-sm-1">
							<span class="input-group-append">
								<button type="button" class="btn btn-info btn-flat" id="search">
									<i class="fa fa-search" aria-hidden="true"></i>
								</button>
							</span>
						</div>
						<div
							class="col-sm-4"><!-- telechargement -->
						</div>
					</div>

				</div>
				<div class="card-body" id="body-card">
				<div class="filtr-item col-sm-2" data-category="1" data-sort="white sample">
                      <a href="https://via.placeholder.com/1200/FFFFFF.png?text=1" data-toggle="lightbox" data-title="sample 1 - white">
                        <img src="https://via.placeholder.com/300/FFFFFF?text=1" class="img-fluid mb-2" alt="white sample"/>
                      </a>
                    </div>
				</div>
			</div>
		</div>
		<!-- /.content -->
	</div>
	<!-- /.content-wrapper -->
	<!-- Main Footer -->

{% endblock %}
