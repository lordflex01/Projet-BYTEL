{% extends 'header.html.twig' %}
{% block body %}
	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<div class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1 class="m-0">
							Contactez-nous
						</h1>
					</div>
				</div>
				<!-- /.row -->
			</div>
			<!-- /.container-fluid -->
		</div>
		<!-- /.content-header -->

		<!-- Main content -->
		<div class="content">
			<div
				class="container-fluid">
				<!-- Default box -->
				<div class="card">
					<div class="card-body row">
						<div class="col-5 text-center d-flex align-items-center justify-content-center">
							<div class="">
								<h2 style="margin-left: -13px;color: #0477ad;">Bouygues<strong>Telecom</strong>
								</h2>
								<p class="lead mb-5" style="font-family: Brush Script MT;">Nous sommes là pour vous !<br>

								</p>
							</div>
						</div>
						<div class="col-7">
							<div class="form-group">
								<label for="inputName">Nom Complet</label>
								<input type="text" id="inputName" class="form-control"/>
							</div>
							<div class="form-group">
								<label for="inputEmail">Adresse E-Mail</label>
								<input type="email" id="inputEmail" class="form-control"/>
							</div>
							<div class="form-group">
								<label for="inputSubject">Sujet</label>
								<input type="text" id="inputSubject" class="form-control"/>
							</div>
							<div class="form-group">
								<label for="inputMessage">Message</label>
								<textarea id="inputMessage" class="form-control" rows="4"></textarea>
							</div>
							<div class="form-group">
								<input type="submit" class="btn btn-primary" value="Envoyer" style="background: #ec5b00;
																																																																																																																																																																																																    border-color: #ec5b00;
																																																																																																																																																																																																    float: right;">
							</div>
						</div>
					</div>
				</div>

			</div>
			<!-- /.container-fluid -->
		</div>
		<!-- /.content -->
		<div class="col-12">
			<div class="card card-primary">

				<div class="card-body">
					<div>
						<div class="btn-group w-100 mb-2">
							{% for user in users %}
								<a class="btn btn-info" href="javascript:void(0)" data-filter={{ user.id }}>
									{{ user.username }}
								</a>
							{% endfor %}
						</div>

					</div>
					<div>
						<div class="filter-container p-0 row">
							{% for user in users %}
								<div class="filtr-item col-sm-2" data-category={{ user.id }} data-sort="white sample">
									{{ user.username }}
								</div>
							{% endfor %}

						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
	<!-- /.content-wrapper -->
	<!-- Main Footer -->
	<footer
		class="main-footer">
		<!-- Default to the left -->
		Copyright &copy;
		<strong>Bouygues Telecom</strong>
		| Tous les droits sont réservés.
	</footer>
	<div class="col-lg-12">

		<div class="card card-primary card-outline">
			<div class="card-header">
				<div class="row">
					<div
						class="col-sm-4">
						<!-- select -->
						<div class="form-group">
							<select class="form-control select2" style="width: 100%;">
								{% for user in users %}
									<option data-filter="1">{{ user.username }}</option>
								{% endfor %}
							</select>

						</div>
					</div>
					<div class="col-sm-3">

						<div class="input-group">
							<input type="month" value="2018-05" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
						</div>
					</div>
					<div class="col-sm-1">
						<span class="input-group-append">
							<button type="button" class="btn btn-info btn-flat" id="search">
								<i class="fa fa-search" aria-hidden="true"></i>
							</button>
						</span>
					</div>
					<div
						class="col-sm-4"><!-- telechargement -->
					</div>
				</div>

			</div>
			<div class="card-body" id="body-card">
				<div class="filtr-item col-sm-2" data-category="1" data-sort="white sample">
					<a href="https://via.placeholder.com/1200/FFFFFF.png?text=1" data-toggle="lightbox" data-title="sample 1 - white">
						<img src="https://via.placeholder.com/300/FFFFFF?text=1" class="img-fluid mb-2" alt="white sample"/>
					</a>
				</div>
			</div>
		</div>
	</div>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- Main Footer -->{% endblock %}
